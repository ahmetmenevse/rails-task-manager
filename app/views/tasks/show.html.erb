
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path(@task.id), class: 'btn btn-light btn-sm border' do %>
      Edit this task
    <% end %>
  </div>

  <p class="well"> <%= @task.details %></p>
  <% if @task.completed %>
    <i class="fa fa-check-square-o"></i>Completed
  <% else %>
    <i class="fa fa-square-o"></i> Not Completed
  <% end %>

  <hr>

   <%= link_to new_task_path do %>
   </i> Add a new task
  <% end %>
</div>
